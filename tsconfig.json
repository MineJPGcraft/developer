{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "sourceMap": false,
        "declaration": true,
        "emitDeclarationOnly": false,
        "composite": true,
        "incremental": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "strictBindCallApply": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
